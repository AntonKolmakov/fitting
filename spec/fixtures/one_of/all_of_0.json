{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "oneOf": [
        {
          "properties": {
            "status": {
              "enum": [
                "ok"
              ]
            },
            "followers": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  }
                ]
              }
            }
          },
          "required": [
            "status",
            "followers"
          ]
        },
        {
          "properties": {
            "status": {
              "enum": [
                "notFound"
              ]
            }
          },
          "required": [
            "status"
          ]
        }
      ]
    }
  ]
}
